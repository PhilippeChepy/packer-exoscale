[Unit]
Description=Kubernetes Controller Manager
After=network-online.target time-sync.target
Wants=network-online.target time-sync.target

[Service]
User={{ kube_controllermanager_user }}
ExecStart={{ kube_controllermanager_bin_path }}/kube-controllermanager \
  --allocate-node-cidrs=true \
  --authentication-kubeconfig={{ kube_controllermanager_config_path }}/kube-controller-manager.kubeconfig \
  --authorization-kubeconfig={{ kube_controllermanager_config_path }}/kube-controller-manager.kubeconfig \
  --client-ca-file={{ kube_controllermanager_config_path }}/server-ca.pem \
  --cluster-cidr=KUBE_CONTROLLER_MANAGER_CLUSTER_IP_RANGE \
  --cluster-signing-cert-file={{ kube_controllermanager_config_path }}/node-ca.pem \
  --cluster-signing-key-file={{ kube_controllermanager_config_path }}/node-ca.key \
  --controllers=*,bootstrapsigner,tokencleaner \
  --kubeconfig={{ kube_controllermanager_config_path }}/kube-controller-manager.kubeconfig \
  --requestheader-client-ca-file={{ kube_controllermanager_config_path }}/aggregation-layer-ca.pem \
  --root-ca-file={{ kube_controllermanager_config_path }}/server-ca.pem \
  --service-account-private-key-file={{ kube_controllermanager_config_path }}/service-account-private-key.pem \
  --use-service-account-credentials=true
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
