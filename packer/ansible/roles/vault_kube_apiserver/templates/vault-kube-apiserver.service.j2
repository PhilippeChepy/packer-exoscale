[Unit]
Description=Vault agent integration for kube-apiserver
After=network-online.target time-sync.target
Wants=network-online.target time-sync.target
StartLimitBurst=10
StartLimitIntervalSec=60

[Service]
EnvironmentFile=/etc/default/etcd
ExecStart=/usr/local/bin/vault agent -config={{ vault_config_path }}/kube-apiserver.hcl
ExecStartPost=/usr/local/bin/etcdctl lock kube-apiserver sudo kube-apiserver-restart --command-timeout=300s
Restart=on-failure
RestartSec=5
Type=oneshot

[Install]
WantedBy=multi-user.target
